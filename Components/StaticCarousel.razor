@inherits CarouselBase;

@{
    base.BuildRenderTree(__builder);
}

@code {

    [Parameter]
    public RenderFragment[] CarouselComponents { get; set; }

    protected override void OnInitialized()
    {
        if (CarouselComponents == null)
            return;

        totalNumberOfItems = CarouselComponents.Length;
        Items = CarouselComponents;

        base.OnInitialized();
    }
}
